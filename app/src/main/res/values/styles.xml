<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie_title">
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="movie_releasedate">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="movie_overview">
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">5</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="movie_rating">
        <item name="android:color">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_crew">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="item_crew.name">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_crew.department">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="profile_cast">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/cast_profile</item>
        <item name="android:padding">6dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="profile_cast.profile_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="cardview_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="cardview_title.subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
